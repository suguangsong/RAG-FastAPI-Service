# ============================================
# Qdrant 向量数据库配置
# ============================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=default

# ============================================
# Embedding 模型配置
# ============================================
# 支持的模型: jina, openai, dashscope, ollama
EMBEDDING_MODEL=jina
EMBEDDING_MODEL_NAME=jina-embeddings-v4
EMBEDDING_DIMENSION=2048

# Ollama 配置（如果使用本地 Ollama）
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# ============================================
# LLM 模型配置
# ============================================
# 支持的提供商: zhipuai, openai, dashscope, ollama
LLM_PROVIDER=zhipuai
LLM_MODEL_NAME=glm-4.7
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# API Keys（根据选择的提供商配置对应的 Key）
ZHIPUAI_API_KEY=your-zhipuai-api-key
JINA_API_KEY=your-jina-api-key
OPENAI_API_KEY=your-openai-api-key
DASHSCOPE_API_KEY=your-dashscope-api-key

# Ollama 配置（如果使用本地 Ollama）
# OLLAMA_BASE_URL 已在上面配置
OLLAMA_LLM_MODEL=llama2

# ============================================
# Rerank 重排序配置
# ============================================
USE_RERANK=true
RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# ============================================
# 检索配置
# ============================================
DEFAULT_TOP_K=10
# 混合检索权重：alpha * 向量相似度 + (1-alpha) * BM25得分
HYBRID_SEARCH_ALPHA=0.7
RERANK_TOP_K=3

# ============================================
# 文档处理配置
# ============================================
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_FILE_SIZE=52428800

# ============================================
# 服务配置
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
